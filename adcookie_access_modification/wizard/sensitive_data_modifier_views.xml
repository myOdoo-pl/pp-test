<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sensitive_data_modifier_view" model="ir.ui.view">
        <field name="name">account.sensitive_data_modifier.form</field>
        <field name="model">account.sensitive_data_modifier.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Sensitive Data Modifier">
                <header>
                    <button string="Mark all" name="mark_all" type="object" class="oe_highlight"/>
                    <button string="Unmark all" name="unmark_all" type="object" class="oe_highlight"/>
                </header>
                <field name="move_ids" domain="['|', ('move_type','=','in_invoice'), ('move_type','=','out_invoice')]">
                    <tree multi_edit="1" editable="top" edit="1" delete="1">
                        <field name="selected_in_wizard" nolabel="1"/>
                        <field name="name"/>
                        <field name="sensitive_data" readonly="1"/>
                    </tree>
                </field>
                <footer>
                    <button string="Save" name="save" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sensitive_data_modifier" model="ir.actions.act_window">
        <field name="name">Sensitive Data Modifier</field>
        <field name="res_model">account.sensitive_data_modifier.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sensitive_data_modifier_view"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>
