<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add sensitive data field to account move view -->
        <record id="view_move_form_ext" model="ir.ui.view">
            <field name="name">account.move.form.ext</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="sensitive_data"/>
                </xpath>
            </field>
        </record>

        <!-- Add sensitive data field to account move list view -->
        <record id="view_invoice_tree_sensitive_data_ext" model="ir.ui.view">
            <field name="name">account.move.invoice.tree.sensitive.data.ext</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="sensitive_data" />
                </xpath>
            </field>
        </record>

    </data>
</odoo>