<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="merged_jpk_wizard_form_view" model="ir.ui.view">
            <field name="name">merged.jpk.wizard.form.view</field>
            <field name="model">merged_jpk_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="period"/>
                            <field name="merged_jpk_filename" invisible="1"/>
                            <field name="merged_jpk_file" filename="merged_jpk_filename"/>
                        </group>

                        <group>
                            <field name="date_from"/>
                            <field name="date_to" required="1"/>
                            <field name="cash_basis_pl"/>
                            <field name="correction_number"/>
                        </group>
                    </group>

                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button name="check_report" string="Generate" colspan="1" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_merged_jpk" model="ir.actions.act_window">
            <field name="name">Merged JPK</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">merged_jpk_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help">Generate merged JPK file.</field>
        </record>

        <menuitem id="menu_merged_jpk" action="action_merged_jpk" sequence="100"
                  parent="account_pl_cirrus.menu_finance_legal_reports"/>
    </data>
</odoo>
