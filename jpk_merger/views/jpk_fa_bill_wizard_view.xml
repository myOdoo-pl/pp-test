<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="jpk_fa_bill_wizard_form_view" model="ir.ui.view">
            <field name="name">jpk.fa.bill.wizard.form.view</field>
            <field name="model">wizard_jpk_fa_bill</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="period"/>
                            <field name="jpk_fa_bill_filename" invisible="1"/>
                            <field name="jpk_fa_bill_file" filename="jpk_fa_bill_filename"/>
                        </group>

                        <group>
                            <field name="date_from"/>
                            <field name="date_to" required="1"/>
                            <field name="cash_basis_pl"/>
                            <field name="correction_number"/>
                        </group>
                    </group>

                    <footer>
                        <button special="cancel" string="Cancel"/>
                        <button name="check_report" string="Generate" colspan="1" type="object" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_jpk_fa_bill" model="ir.actions.act_window">
            <field name="name">JPK-FA BILL</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard_jpk_fa_bill</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help">Generate JPK-FA BILL file.</field>
        </record>

        <menuitem id="menu_jpk_fa_bill" action="action_jpk_fa_bill" sequence="99"
                  parent="account_pl_cirrus.menu_finance_legal_reports"/>
    </data>
</odoo>
