<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add required condition to sale order view -->
        <record id="view_order_form_analytic_acc_and_tag" model="ir.ui.view">
            <field name="name">sale.view.order.form.analytic.acc.and.tag</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page/field/form/group/group[2]/field[@name='analytic_tag_ids']" position="replace">
                    <field name="analytic_tag_ids"
                           attrs="{'required': [('display_type', 'not in', ['line_section', 'line_note'])]}"
                           widget="many2many_tags" groups="analytic.group_analytic_tags"
                           options="{'color_field': 'color'}"
                           domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                </xpath>
                <xpath expr="//notebook/page/field/tree/field[@name='analytic_tag_ids']" position="replace">
                    <field name="analytic_tag_ids" optional="show"
                           attrs="{'required': [('display_type', 'not in', ['line_section', 'line_note'])]}"
                           groups="analytic.group_analytic_tags" widget="many2many_tags"
                           options="{'color_field': 'color'}"
                           domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>