<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Added overhead field to contract-->
        <record id="hr_contract_overhead" model="ir.ui.view">
            <field name="name">hr.contract.overhead</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='wage']" position="after">
                    <label for="overhead"/>
                    <div class="o_row" name="overhead">
                        <field name="overhead" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
